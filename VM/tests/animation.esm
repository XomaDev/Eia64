make_space
    Load 51
    Str " "
    Add_Str
    Store 51

    Str_Len
    Load 50
    Int_Cmp
    Scope make_space Gnq
end

create_spaces
    # arg {50} for n spaces
    # {51} for resultant spaces

    Str ""
    Store 51
    Str_Len
    Load 50
    Int_Cmp

    Scope make_space Vnq
end

init_conf
    # [0, 9] range for properties
    # Loading all the properties
    # Interval => 0
    # Trash Can => 1
    # Happy Right   => 2
    # Happy Left   => 3

    # Set interval to 500 ms
    Int 500
    Store 0

    # Trash Symbol
    Str "ðŸ—‘"
    Store 1

    # Happy Right
    Str "(> ^_^)>"
    Store 2

    # Happy Left
    Str "<(^_^ <)"
    Store 3
end

happy_right
    Load 2
    Print_Str
end

happy_left
    Load 3
    Print_Str
end

steal_char
    # trash guy steals a char!

    # Print Trash Can
    Load 1
    Print_Str

    # Print Left Spaces
    Load 15
    Store 50
    Scope create_spaces Visit
    Load 51
    Print_Str

    # Print Trash Guy Face
    Scope happy_right   # for true
    Scope happy_left    # for false
    Load 14             # going_right variable
    Bool True
    Int_Cmp             # compare

    Bool True           # tells to come back
    Decide

    # Print Right Spaces
    Load 16
    Store 50
    Scope create_spaces Visit
    Load 51
    Print_Str Endl
end

iterate_char
    # get relevant char from text
    Load 10     # text
    Load 12     # char_i
    Char_At
    To_Ch

    Store 13    # store relevant char

    # going_right = true
    Int 1
    Store 14

    # setup left_space and right_space =
    Int 0
    Store 15    # left space (0)

    Int 10
    Load 12
    Add
    Store 16    # right space (10+i)

    Scope steal_char Visit

    # increment char_i
    Load 12
    Int 1
    Add
    Store 12

    Scope char_loop Go
end

char_loop
    Load 12     # char_i
    Load 11     # text len
    Int_Cmp

    Scope iterate_char Gnq
end

trash
    # [10, 19] for animation properties
    # arg {10} => text

    # {11} => text size
    # {12} => char_i
    # {13} => current letter
    # {14} => going right? initially true
    # {15} => left space, initially 0
    # {16} => right space, initially 10 + i

    # get and store text size
    Load 10
    Str_Len
    Store 11
    Pop

    # init char loop i
    Int 0
    Store 12
    Pop

    Scope char_loop Visit
end

main
    Scope init_conf Visit

    Str "Mea"
    Store 10
    Scope trash Visit
end